{# Page d'accueil des articles (et aussi du site) #}

{% extends "templates/defaut.twig" %}

{% block title %} Articles {% endblock %}

{% block content %}
    <div class="section">
        <div class="row">
            <div class="col-sm-8">
                {% for article in articles %}
                    <h2>
                        <a href="{{ article.url }}">
                            {{ article.titre }}
                        </a>
                    </h2>
                    <h5><span class="label label-default">{{ article.categorie }}</span></h5>
                    <p>{{ article.extrait }}</p>
                {% endfor %}

            </div>
            <div class="col-sm-4">
                <ul class="list-group">
                    <li class="list-group-item active">
                        <strong>Cat√©gories</strong>
                    </li>
                    {% for categorie in categories %}
                        <li class="list-group-item">
                            <a href="{{ categorie.url }}">    
                                {{ categorie.titre }}
                            </a>    
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

